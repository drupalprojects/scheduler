  $items = array();
  if ($may_cache) {
    $items[] = array(
      'path' => 'scheduler/cron',
      'type' => MENU_CALLBACK,
      'callback' => '_scheduler_run_cron',
      'access' => TRUE,
    );
    $items[] = array(
      'path' => 'scheduler/timecheck',
